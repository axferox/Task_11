  "dependencies": {
    "chromedriver": "^96.0.0",
    "configstore": "^6.0.0",
    "geckodriver": "^2.0.4",
    "selenium-webdriver": "^4.1.0",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^8.0.0-rc.2",
    "chai": "^4.3.4",
    "fs-extra": "^10.0.0",
    "mocha": "^9.1.3",
    "mochawesome": "^7.0.1",
    "node-fetch": "^2.6.1",
    "path": "^0.12.7",
    "winston": "^3.3.3"
  },
  "description": "+ Node version 8 or above + Bash shell + Java"
