{
  "name": "task_10_webdriverjs",
  "version": "1.0.0",
  "main": "index.js",
  "directories": {
    "test": "test/specs/**/**.spec.js"
  },
  "scripts": {
    "test": "mocha --config ./**/**/.mocharc.js",
    "cucumber": "node ./test/config/yargs.cucumber.tests.config.js",
    "precucumber": "npm run remove-browser-config & npm run remove-cucumber-reports & npm run remove-logs",
    "start": "node ./test/config/yargs.tests.config.js",
    "prestart": "npm run remove-browser-config & npm run remove-logs",
    "selenium": "node ./test/config/yargs.hub.config.js",
    "node": "node ./test/config/yargs.node.config.js",
    "smoke": "npm test ./**/**/smoke-test/*.spec.js",
    "regression": "npm test ./**/**/regression-test/*.spec.js",
    "sanity": "npm test ./**/**/sanity-test/*.spec.js",
    "remove-logs": "node ./**/**/**/log_cleanup.js",
    "remove-browser-config": "node ./**/**/**/log_cleanup.js",
    "remove-cucumber-reports": "node ./**/**/**/cucumber_reports_cleanup.js",
    "pretest": "npm run remove-logs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/axferox/Task_10_WebdriverJS.git"
  },
